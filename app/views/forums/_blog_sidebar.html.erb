<div id="blog_sidebar">
  <h2><%= blog_sidebar.name %></h2>
  <% blog_sidebar.topics.each do |t| %>
  <div class="blog_post">
    <h3><%= t.topic %></h3>
    <%= raw textilize(truncate(t.posts.first.content, 200)) %>
    <p class="created_at">
      <span class="posted">Posted</span> <%= format_date(t.last_post_at) %>
      <span class="by">by</span>
      <span class="author"><%= t.last_post_author %></span>
    </p>
  </div>
  <% end %>
</div><!--#blog_sidebar-->
