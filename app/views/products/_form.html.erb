<div>
	<%= form.label :sku, 'SKU' %>:<br />
	<%= form.text_field :sku, :class => "text" %>
</div>

<div>
	<%= form.label :name %>:<br />
	<%= form.text_field :name, :class => "text" %>
</div>

<div>
	<%= form.label :price %>:<br />
	<%= form.text_field :price, :class => "text" %> GBP
</div>

<div>
  <%= form.label :tax_type %>:<br />
  <select id="product_tax_type" name="product[tax_type]">
    <option value="<%= Product::NO_TAX %>"<%= ' selected="selected"' if @product.tax_type==Product::NO_TAX %>>No tax</option>
    <option value="<%= Product::INC_VAT %>"<%= ' selected="selected"' if @product.tax_type==Product::INC_VAT %>>Price includes VAT</option>
    <option value="<%= Product::EX_VAT %>"<%= ' selected="selected"' if @product.tax_type==Product::EX_VAT %>>Price excludes VAT</option>
  </select>
</div>

<div>
	<%= form.label :image_id %>:<br />
  <%= select :product, :image_id, image_options %>
</div>

<div>
	<%= form.label :description %>:<br />
	<%= form.text_area :description, :class => "text" %>
</div>

<div>
	<%= form.label :full_detail %>:<br />
	<%= form.text_area :full_detail, :class => "text" %>
</div>

<div>
	<label for="product_apply_shipping_true">Apply shipping?:</label><br />
	<%= form.radio_button :apply_shipping, true, :class => "radio" %> 
	<label for="product_apply_shipping_true">Yes</label> 
	<%= form.radio_button :apply_shipping, false, :class => "radio" %> 
	<label for="product_apply_shipping">No</label> 
</div>
