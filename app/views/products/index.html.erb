<%= page_header 'Products' %>

<p>
  <%= new_button Product %>
</p>
<% if @products.empty? -%>
<p>No products</p>
<% else -%>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Active</th>
      <th>Name [SKU]</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
<% @products.each do |p| -%>
    <tr>
      <td><%= tick_cross p.active? %></td>
      <td><%= link_to p.name_with_sku, edit_product_path(p) %></td>
      <td>
        <%= edit_button(p) %>
        <%= delete_button(p) %>
      </td>
    </tr>
<% end -%>
  </tbody>
</table>
<% end -%>
