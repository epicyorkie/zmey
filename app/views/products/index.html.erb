<div class="page-header">
  <h1>Products</h1>
</div>

<p>
  <%= link_to 'New product', new_product_path, class: 'btn btn-primary' %>
</p>
<% if @products.empty? -%>
<p>No products</p>
<% else -%>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name [SKU]</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
<% @products.each do |p| -%>
    <tr>
      <td><%= link_to p.name_with_sku, edit_product_path(p) %></td>
      <td>
        <%= edit_button(p) %>
        <%= delete_button(p) %>
      </td>
    </tr>
<% end -%>
  </tbody>
</table>
<% end -%>
