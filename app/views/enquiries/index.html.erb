<h1>Listing enquiries</h1>

<% if @enquiries.empty? -%>
<p>No enquiries have been sent yet.</p>
<% else -%>

<table>
  <tr>
    <th>Name</th>
    <th>Organisation</th>
    <th>Postcode</th>
    <th>Telephone</th>
    <th>Email</th>
    <th>Call back</th>
  </tr>

<% @enquiries.each do |enquiry| %>
  <tr>
    <td><%= enquiry.name %></td>
    <td><%= enquiry.organisation %></td>
    <td><%= enquiry.postcode %></td>
    <td><%= enquiry.telephone %></td>
    <td><%= enquiry.email %></td>
    <td><%= enquiry.call_back %></td>
    <td><%= link_to 'Show', enquiry %></td>
    <td><%= link_to 'Edit', edit_enquiry_path(enquiry) %></td>
    <td><%= link_to 'Destroy', enquiry, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<% end -%>