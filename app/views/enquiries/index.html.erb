<div class="page-header">
  <h1>Enquiries</h1>
</div>

<% if @enquiries.empty? -%>
<p>No enquiries have been sent yet.</p>
<% else -%>

<table class="table table-bordered table-striped">
  <tr>
    <th>Name</th>
    <th>Organisation</th>
    <th>Postcode</th>
    <th>Telephone</th>
    <th>Email</th>
    <th>Call back</th>
    <th>Actions</th>
  </tr>

<% @enquiries.each do |enquiry| %>
  <tr>
    <td><%= enquiry.name %></td>
    <td><%= enquiry.organisation %></td>
    <td><%= enquiry.postcode %></td>
    <td><%= enquiry.telephone %></td>
    <td><%= enquiry.email %></td>
    <td><%= enquiry.call_back %></td>
    <td style="width: 150px;">
      <%= link_to 'View', enquiry, class: 'btn btn-mini' %>
      <%= link_to 'Edit', edit_enquiry_path(enquiry), class: 'btn btn-mini' %>
      <%= link_to 'Destroy', enquiry, :confirm => 'Are you sure?', :method => :delete, class: 'btn btn-mini btn-danger' %>
    </td>
  </tr>
<% end %>
</table>

<% end -%>