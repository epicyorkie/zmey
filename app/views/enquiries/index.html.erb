<h1>Listing enquiries</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Organisation</th>
    <th>Postcode</th>
    <th>Telephone</th>
    <th>Email</th>
    <th>Call back</th>
  </tr>

<% @enquiries.each do |enquiry| %>
  <tr>
    <td><%=h enquiry.name %></td>
    <td><%=h enquiry.organisation %></td>
    <td><%=h enquiry.postcode %></td>
    <td><%=h enquiry.telephone %></td>
    <td><%=h enquiry.email %></td>
    <td><%=h enquiry.call_back %></td>
    <td><%= link_to 'Show', enquiry %></td>
    <td><%= link_to 'Edit', edit_enquiry_path(enquiry) %></td>
    <td><%= link_to 'Destroy', enquiry, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
