<%=
template('header',
  :body_class => body_class,
  :csrf_meta_tags => csrf_meta_tags,
  :css_admin => stylesheet_link_tag("admin", :media => "screen"),
  :css_external => @w.css_url.blank? ? '' : stylesheet_link_tag(@w.css_url, :media => "screen"),
  :css_screen => @w.use_default_css? ? stylesheet_link_tag("screen", :media => "screen") : '',
  :description => @description,
  :google_analytics_code => render("shared/google_analytics_code"),
  :js_application => javascript_include_tag("application"),
  :keywords => @keywords,
  :page_title => @title ? @title : @w.name,
  :website_name => @w.name
)
%>
  <% Page.navs(@w).each do |nav| %>
  <ul id="<%= nav.id_attribute %>">
<% nav.pages.each do |p| %><%= nav_link_to(p, p.path) %><% end %>
  <% if nav.id_attribute == 'primary_nav' -%>
    <%= nav_link_to I18n.t('controllers.enquiries'), new_enquiry_path %>
    <% if logged_in? -%>
    <%= nav_link_to I18n.t('my_account'), {:controller => 'users', :action => 'show', :id => @current_user}, nil, 'n_account' %>
    <%= nav_link_to I18n.t('logout'), :controller => 'sessions', :action => 'destroy' %>
    <% else -%>
    <% if @w.can_users_create_accounts? -%>
    <%= nav_link_to I18n.t('register'), :controller => 'users', :action => 'new' %>
    <% end -%>
    <%= nav_link_to I18n.t('login'), :controller => 'sessions', :action => 'new' %>
    <% end -%>
    <% if @w.shop? -%>
    <%= nav_link_to I18n.t('view_cart'), :controller => 'basket' %>
    <%= nav_link_to I18n.t('checkout'), :controller => 'basket', :action => 'checkout' %>
    <% end -%>
  <% end %>
  </ul>
  <% end %>
  <div id="content">
    <% if !@blog.nil? && @w.render_blog_before_content? %>
    <%= render :partial => 'forums/blog_sidebar', :object => @blog %>
    <% end %>
<%= yield %>
    <% if !@blog.nil? && !@w.render_blog_before_content? %>
    <%= render :partial => 'forums/blog_sidebar', :object => @blog %>
    <% end %>
  </div>
<%=
template("footer",
  :admin_links => render("shared/admin_links"),
  :footer_html => raw(@w.footer_html),
  :website_name => @w.name,
  :worldpay_logos => @w.rbswp_active? ? template("worldpay_logos", :installation_id => @w.rbswp_installation_id) : '',
  :year => Date.today.year
)
%>
