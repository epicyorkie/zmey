<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title><%= @w.name %></title>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
  <script src="/bootstrap/js/bootstrap.min.js"></script>
  <style>
  body { padding-top: 60px; }
  </style>
  <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
  <!--[if lt IE 9]>
  <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
</head>
<body>

<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="brand" href="/">Home</a>
      <div class="nav-collapse">
        <ul class="nav">
          <li class="<%= 'active' if current_page? enquiries_path %>"><%= link_to t('controllers.enquiries'), enquiries_path %></li>
          <li class="<%= 'active' if current_page? pages_path %>"><%= link_to t('controllers.pages'), controller: 'pages' %></li>
          <li class="<%= 'active' if current_page? liquid_templates_path %>"><%= link_to t('controllers.liquid_templates'), liquid_templates_path %></li>
          <li class="<%= 'active' if current_page? products_path %>"><a href="/products/">Products</a></li>
          <li class="<%= 'active' if current_page? users_path %>"><%= link_to 'Users', users_path %></li>
          <li class="<%= 'active' if current_page? orders_path %>"><%= link_to 'Orders', orders_url %></li>
          <li class="<%= 'active' if current_page? images_path %>"><%= link_to t('controllers.images'), images_path %></li>
          <li class="<%= 'active' if current_page? carousel_slides_path %>"><%= link_to 'Carousel Slides', carousel_slides_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Settings <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to 'Countries', countries_path %></li>
              <li><%= link_to 'Shipping Zones', shipping_zones_path %></li>
              <li><%= link_to 'Shipping Classes', shipping_classes_path %></li>
              <li><%= link_to 'Product Groups', product_groups_url %></li>
              <li><%= link_to 'Discounts', discounts_url %></li>
              <li><%= link_to 'Website Settings', edit_website_path(@w) %></li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
<div class="container">
<% if flash[:notice] -%>
<div class="alert alert-info fade in">
  <a class="close" data-dismiss="alert" href="#">&times;</a>
  <%= flash[:notice] %>
</div>
<% end -%>
<%= yield %>
</div>

</body>
</html>
