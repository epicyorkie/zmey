<% if @page.errors.any? -%>
<div class="alert alert-error fade in">
  <a class="close" data-dismiss="alert" href="#">&times;</a>
  <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>

  <ul>
<% @page.errors.full_messages.each do |msg| -%>
    <li><%= msg %></li>
<% end -%>
  </ul>
</div>
<% end -%>

<%= form_for @page do |form| %>

	<%= form.label :title %>
	<%= form.text_field :title %>

	<%= form.label :name %>
	<%= form.text_field :name %>

	<%= form.label :slug %>
	http://<%= request.host %>/<%= form.text_field :slug %>

  <%= form.label :parent_id, 'Parent page or navigation' %>
  <%= form.collection_select :parent_id, @w.pages, :id, :name_with_ancestors, {include_blank: '-- No parent --'} %>

  <%= form.label :image_id %>
  <%= select :page, :image_id, image_options %>

	<%= form.label :content %>
	<%= form.text_area :content, class: 'input-xlarge', rows: 12 %>

  <h2>Meta tags</h2>

	<%= form.label :keywords %>
	<%= form.text_field :keywords %>

  <%= form.label :description %>
  <%= form.text_field :description %>

<br><%= submit_tag submit_label, class: 'btn btn-primary' %>
<% end %>
