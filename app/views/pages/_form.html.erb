<% if @page.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>

    <ul>
    <% @page.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @page do |form| %>
<div>
	<%= form.label :title %>:<br />
	<%= form.text_field :title, :class => "text" %>
</div>

<div>
	<%= form.label :name %>:<br />
	<%= form.text_field :name, :class => "text" %>
</div>

<div>
	<%= form.label :slug %>:<br />
	http://<%= request.host %>/<%= form.text_field :slug, :class => "text" %>
</div>

<div>
  <%= form.label :parent_id, 'Parent page or navigation' %>:<br />
  <%= form.collection_select :parent_id, @w.pages, :id, :name_with_ancestors, {:include_blank => '-- No parent --'} %>
</div>

<div>
  <%= form.label :image_id %>:<br />
  <%= select :page, :image_id, image_options %>
</div>

<fieldset>
  <legend>Meta tags</legend>
  <div>
  	<%= form.label :keywords %>:<br />
  	<%= form.text_field :keywords, :class => "text" %>
  </div>

  <div>
  	<%= form.label :description %>:<br />
  	<%= form.text_field :description, :class => "text" %>
  </div>
</fieldset>

<div>
	<%= form.label :content %>:<br />
	<%= form.text_area :content %>
</div>
<%= submit_tag submit_label %>
<% end %>