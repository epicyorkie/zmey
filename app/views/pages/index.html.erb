<div class="page-header">
  <h1>Pages</h1>
</div>

<p>
  <%= link_to 'New Page', new_page_path, class: 'btn btn-primary' %>
</p>

<table class="table table-striped table-bordered">
<% @pages.each do |p| %>
  <%= page_tree p %>
<% end %>

<%= content_tag(:tr, content_tag(:td, 'No pages')) if @pages.empty? %>
</table>
