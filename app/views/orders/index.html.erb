<h1>Orders</h1>
<%= flash_notice %>
<table id="orders">
  <thead>
    <tr>
      <th>Order Number</th><th>Order Total</th><th>When Placed</th>
      <th>Full Name</th><th>Status</th>
    </tr>
  </thead>
  <tbody>
  <% @orders.each do |o| -%>
    <tr class="<%= cycle('odd', 'even') %>">
      <td><%= link_to o.order_number, :action => 'view', :id => o.id %></td>
      <td><%= formatted_price(o.total) %></td>
      <td><%= o.created_at %></td>
      <td><%= h o.full_name %></td>
      <td><%= o.status_description %></td>
    </tr>
  <% end -%>
  </tbody>
</table>
