<% tax_total = @w.vat_number.empty? ? '' : @order.tax_total -%>

    _gaq.push(['_addTrans',
      '<%= h @order.order_number %>',
      '<%= h @w.name %>',
      '<%= @order.total %>',
      '<%= tax_total %>',
      '<%= @order.shipping_amount %>',
      '<%= h @order.town_city %>',
      '<%= h @order.county %>',
      '<%= h @order.country.name %>'
    ]);
<%
@order.order_lines.each do |line|
  category_or_variation = line.feature_descriptions.empty? ? '' : line.feature_descriptions
-%>

    _gaq.push(['_addItem',
      '<%= h @order.order_number %>',
      '<%= h line.product_sku %>',
      '<%= h line.product_name %>',
      '<%= h category_or_variation %>',
      '<%= line.product_price %>',
      '<%= line.quantity %>'
    ]);
<% end -%>

    _gaq.push(['_trackTrans']);
