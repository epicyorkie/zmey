<h1>Payments</h1>

<table>
  <thead>
    <tr>
      <th>Order</th>
      <th>Amount</th>
      <th>Accepted</th>
      <th>Name</th>
      <th>Email</th>
      <th>Details</th>
    </tr>
  </thead>
  <tbody>
  <% @payments.each do |p| %>
    <tr>
      <td>
        <% if p.order -%>
        <%= link_to p.order.order_number, :controller => 'orders', :action => 'show', :id => p.order.id %>
        <% else -%>
        -
        <% end -%>
      </td>
      <td>
        <%= formatted_price p.amount %>
      </th>
      <td>
        <%= tick_cross p.accepted %>
      </td>
      <td>
        <%= h p.name %>
      </td>
      <td>
        <%= mail_to p.email, h(p.email) %>
      </td>
      <td>
        <%= link_to 'Full detail', :controller => 'payments', :action => 'show', :id => p.id %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
