<%= page_header 'Payments' %>

<table class="table">
  <thead>
    <tr>
      <th>Order</th>
      <th>Amount</th>
      <th>Accepted</th>
      <th>Name</th>
      <th>Email</th>
      <th>Details</th>
    </tr>
  </thead>
  <tbody>
  <% @payments.each do |p| %>
    <tr>
      <td>
        <% if p.order -%>
        <%= link_to p.order.order_number, p.order %>
        <% else -%>
        -
        <% end -%>
      </td>
      <td>
        <%= formatted_price p.amount %>
      </th>
      <td>
        <%= tick_cross p.accepted %>
      </td>
      <td>
        <%= p.name %>
      </td>
      <td>
        <%= mail_to p.email, p.email %>
      </td>
      <td>
        <%= link_to 'Full detail', p %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
