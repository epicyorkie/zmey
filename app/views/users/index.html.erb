<h1>Users</h1>
<p><%= link_to 'New user', :action => 'new' %></p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Admin</th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |u| -%>
    <tr>
      <td><%= link_to u.name, u %></td>
      <td><%= mail_to u.email, u.email %>&nbsp;</td>
      <td><%= tick u.admin %></td>
    </tr>
  <% end -%>
  </tbody>
</table>
