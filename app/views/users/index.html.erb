<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Admin</th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |u| -%>
    <tr>
      <td><%= link_to h(u.name), :controller => 'users', :action => 'show', :id => u %></td>
      <td><%= mail_to u.email, u.email %>&nbsp;</td>
      <td><%= image_for_admin_status(u) %></td>
    </tr>
  <% end -%>
  </tbody>
</table>
