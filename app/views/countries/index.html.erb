<%= page_header 'Countries' %>

<p>
  <%= link_to 'New', new_country_path, class: 'btn btn-primary' %>
</p>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Country</th>
      <th>ISO 3166-1-alpha-2</th>
      <th>Shipping Zone</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
<% @countries.each do |country| %>
    <tr>
      <td><%= country.name %></td>
      <td><%= country.iso_3166_1_alpha_2 %></td>
      <td><%= country.shipping_zone ? country.shipping_zone.name : '-' %></td>
      <td>
        <%= edit_button(country) %>
        <%= delete_button(country) %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>
