<div>
	<%= form.label :subdomain %>:<br />
	<%= form.text_field :subdomain, :class => "text" %>
</div>

<div>
	<%= form.label :domain %>:<br />
	<%= form.text_field :domain, :class => "text" %>
</div>

<div>
	<%= form.label :google_analytics_code, 'Google Analytics code' %>:<br />
	<%= form.text_field :google_analytics_code, :class => "text" %>
</div>

<div>
	<%= form.label :name %>:<br />
	<%= form.text_field :name, :class => "text" %>
</div>

<div>
	<%= form.label :email %>:<br />
	<%= form.text_field :email, :class => "text" %>
</div>

<div>
  <%= form.label :blog_id %>:<br />
  <%= form.collection_select :blog_id, Forum.all(:conditions => {:website_id => @w.id}, :order => :name), :id, :name, {:include_blank => '-- No blog --'} %>
</div>

<div>
	<%= form.label :css_url, 'CSS URL' %>:<br />
	<%= form.text_field :css_url, :class => "text" %>
</div>

<div>
	<label for="website_use_default_css_true">Use default CSS?:</label>
	<%= form.radio_button :use_default_css, true, :class => "radio" %> 
	<label for="website_use_default_css_true">Yes</label> 
	<%= form.radio_button :use_default_css, false, :class => "radio" %> 
	<label for="website_use_default_css">No</label> 
</div>

<fieldset>
<legend>Shop Settings</legend>

<div>
	<label for="website_shop_true">Shop?:</label>
	<%= form.radio_button :shop, true, :class => "radio" %> 
	<label for="website_shop_true">Yes</label> 
	<%= form.radio_button :shop, false, :class => "radio" %> 
	<label for="website_shop">No</label> 
</div>

<div>
	<label for="website_skip_payment_true">Skip payment?:</label>
	<%= form.radio_button :skip_payment, true, :class => "radio" %> 
	<label for="website_skip_payment_true">Yes</label> 
	<%= form.radio_button :skip_payment, false, :class => "radio" %> 
	<label for="website_skip_payment">No</label> 
</div>

</fieldset>

<fieldset>
<legend>RBS WorldPay</legend>

<div>
	<label for="website_rbswp_active_true">Active?:</label>
	<%= form.radio_button :rbswp_active, true, :class => "radio" %> 
	<label for="website_rbswp_active_true">Yes</label> 
	<%= form.radio_button :rbswp_active, false, :class => "radio" %> 
	<label for="website_rbswp_active">No</label> 
</div>

<div>
	<label for="website_rbswp_test_mode">Mode?:</label>
	<%= form.radio_button :rbswp_test_mode, false, :class => "radio" %> 
	<label for="website_rbswp_test_mode">Production</label> 
	<%= form.radio_button :rbswp_test_mode, true, :class => "radio" %> 
	<label for="website_rbswp_test_mode_true">Test</label> 
</div>

<div>
	<%= form.label :rbswp_installation_id, 'Installation ID' %>:<br />
	<%= form.text_field :rbswp_installation_id, :class => "text" %>
</div>

<div>
	<%= form.label :rbswp_payment_response_password, 'Payment response password' %>:<br />
	<%= form.text_field :rbswp_payment_response_password, :class => "text" %>
</div>

</fieldset>