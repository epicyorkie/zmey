<%= page_header 'Shipping Zones' %>

<p>
  <%= link_to 'New', new_shipping_zone_path, class: 'btn btn-primary' %>
</p>

<% unless @shipping_zones.empty? -%>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Shipping Zone</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
<% @shipping_zones.each do |zone| %>
    <tr>
      <td><%= zone.name %></td>
      <td>
        <%= edit_button(zone) %>
        <%= delete_button(zone) %>
      </td>
    </tr>
<% end -%>
  </tbody>
</table>
<% end -%>