<h1>Edit Image</h1>
<%= flash_notice %>

<div class="form">
	<%= error_messages_for :image -%>

	<fieldset>
		<legend>Replace image / edit image details</legend>
    <%= form_for :image, @image, :html => { :multipart => true }, :url => { :action => "update", :id => @image.id } do |form| %>
    <%= render :partial => 'form', :object => form %>

    <%= submit_tag "Edit Image" %>
    
    <%= link_to '[Delete]', {:action => 'destroy', :id => @image},
      :confirm => 'Are you sure?', :method => :delete %>

  <% end %>
  </fieldset>
</div>

<%= image_tag @image.url(256) %>
